<h2>Sign In</h2>
<%= form_for(User.new, :url => new_user_session_path) do |f| %>
  <%= f.label :email %><br />
  <%= f.email_field :email, :size => '20' %><br />
  <%= f.label :password %><br />
  <%= f.password_field :password, :size => '20' %><br />
  <%= f.check_box :remember_me %><%= f.label :remember_me, :class => 'small' %><br />
  <%= f.submit "Sign In", :class => 'button' %>
  <% link_to "Forgot your password?", new_user_password_path %>
<% end %>
