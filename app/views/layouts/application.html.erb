<!DOCTYPE html>
<html>
<head>
  <title>GCSRA B-roll site</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'collection' %>
  <%= javascript_include_tag 'swfobject' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="shadow-left">
  <div id="shadow-right">
    <div id="main-container">
      <%= render 'shared/header' %>
      <div id="top-menu"></div>
      <div id="content-container">
        <div id="left">
          <% if flash.notice %>
            <div class="flash notice">
              <%= flash.notice %>
            </div>
          <% end %>
          <% if flash.alert %>
            <div class="flash alert">
              <%= flash.alert %>
            </div>
          <% end %>
          <%= yield %>
        </div>
        <div id="right">
          <% if can?(:read, Video) %>
            <%= render_shadow_box('search', render('shared/search')) %>
            <%= render_shadow_box('collection', render('shared/collection')) %>
          <% end %>
        </div>
        <div class="clear"></div>
      </div>
    </div>
    <div id="shadow-bottom">
      <%= render 'shared/footer' %>
    </div>
  </div>
</div>
</body>
</html>
