<!DOCTYPE html>
<html>
<head>
  <title>GCSRA B-roll site</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="shadow-left">
  <div id="shadow-right">
    <div id="main-container">
      <%= render 'shared/header' %>
      <div id="top-menu"></div>
      <div id="content-container">
        <div id="left">
          <%= yield %>
        </div>
        <div id="right">
          <%= render_shadow_box('search', render('shared/search')) %>
          <% unless current_user %>
            <%= render_shadow_box('sign_in', render('shared/sign_in')) %>
          <% else %>
            <%= render_shadow_box('video_collection') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>
