<%= link_to 'New Category', new_category_path, :class => 'button' %>
<table width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th># of Videos</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.videos.count %></td>
        <td>
          <%= link_to 'Edit', edit_category_url(category), :class => 'button', :style => 'display:inline;' %>
          <%= button_to 'Remove', category_url(category), :method => :delete, :class => 'button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
